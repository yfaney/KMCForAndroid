<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.kansasmission.m"
    android:versionCode="9"
    android:versionName="1.48" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
	<supports-screens android:largeScreens="true" android:anyDensity="true"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.kansasmission.m.KmcMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.kansasmission.m.FeedActivity"
            android:label="@string/title_activity_feed" >
        </activity>
        <activity
            android:name="org.kansasmission.m.ViewActivity"
            android:label="@string/title_activity_view" >
        </activity>
    </application>
    <!-- HTTP Request를 위한 퍼미션 -->
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
